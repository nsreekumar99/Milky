@model IEnumerable<Product>

<div class="container-fluid">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-img-wrapper">
                        <img src="@product.ImageUrl" class="card-img-top img-fluid" alt="Product Image">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title product-name">@product.ProductName</h5>
                        <p class="text-muted float-left mb-0">Price: ₹@product.Price/litre</p>
                        <p class="text-muted float-left ml-2 mb-0">Milk Fat: @product.MilkFat%</p>
                        <div class="clearfix"></div>
                    </div>
                    <div class="card-footer bg-transparent border-top-0 text-center" style="margin-top: -5px;">
                        <button type="button" class="btn btn-primary btn-block" style="width: 100%;">Buy</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Custom styling for the product name */
    .product-name {
        font-size: 1.2em;
        font-weight: bold;
        color: #333; /* Adjust color as needed */
        margin-bottom: 10px;
    }
</style>
