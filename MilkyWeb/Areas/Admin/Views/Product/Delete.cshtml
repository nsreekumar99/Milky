@model Product
<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Delete Product</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post">
			<input asp-for="id" hidden />
			<div class="border p-3 mt-4">
				<div class="form-floating py-2 col-12 ">
					<input asp-for="ProductName" disabled class="form-control border-0 shadow" />
					<label asp-for="ProductName" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="Description" disabled class="form-control border-0 shadow" />
					<label asp-for="Description" class="ms-2"></label>
				</div>
				<div class="form-floating py-2 col-12">
					<input asp-for="MilkFat" disabled class="form-control border-0 shadow" />
					<label asp-for="MilkFat" class="ms-2"></label>
				<div class="form-floating py-2 col-12 ">
					<input asp-for="Price" disabled class="form-control border-0 shadow" />
					<label asp-for="Price" class="ms-2"></label>
				</div>

				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-danger form-control">Delete</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back To List</a>
					</div>
				</div>
			</div>

		</form>
	</div>
</div>


